<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">


    <ImageButton
        android:id="@+id/btnToggleTheme"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Ndrysho ngjyren"
        app:tint="?attr/colorControlNormal"
        android:src="@drawable/ic_moon"
        android:scaleType="centerInside"
        android:padding="8dp" />




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/book_ic"
        android:contentDescription="Book Icon"
        />


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eBook Reader"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnPickPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zgjidheni Librin"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnViewBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shiko librat"
        android:layout_below="@id/btnPickPdf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnContinueReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vazhdo leximin"
        android:layout_below="@id/btnViewBooks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF" />

</RelativeLayout>
