<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft antique gradient, kept intact -->
    <gradient
        android:startColor="#FFF8E7"
        android:centerColor="#FDF6E3"
        android:endColor="#F5ECD4"
        android:angle="45" />

    <!-- Thinner gold border -->
    <stroke
        android:width="1dp"
        android:color="#CFAE6D" />

    <!-- Tighter rounded corners -->
    <corners android:radius="10dp" />

    <!-- Reduced inner padding -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />
</shape>
